{
  "$schema": "https://turbo.build/schema.json",

  "globalDependencies": ["**/.env"],

  "tasks": {
    "build": {
      "outputs": [
        ".next/**",
        "! .next/cache/**",
        "next-env.d.ts"
      ]
    },

    "dev": {
      "persistent": true,
      "cache": false
    },

    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"]
    },

    "lint": {
      "outputs": ["node_modules/.cache/.eslintcache"]
    },

    "typecheck": {
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },

    "clean": {
      "cache": false
    }
  }
}
